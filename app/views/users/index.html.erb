<br>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 mx-auto justify-content-center">
			<table class="table table-striped border ">
				<tr class="d-flex mx-auto justify-content-center">
					<th scope="col">Info about you</th>
				</tr>
				<tr class="d-flex mx-auto justify-content-center">
					<td><%= current_user.email %></td>
				</tr>
				<tr class="d-flex mx-auto justify-content-center">
					<td><%= current_user.userName %></td>
				</tr>
				<tr class="d-flex mx-auto justify-content-center">
					<% if current_user.image.present? %>
						<td><%= image_tag current_user.image %></td>
					<% else %>
						<td><img src="/user.png"></td>
					<% end %>	
				</tr>
				<tr>
					<td class="d-flex mx-auto justify-content-center"><%= link_to "Edit" , edit_user_path(@user) , class: "btn btn-warning m-2" %>
					<%= link_to "Delete" , @user , data: {method: :delete, confirm: 'Are you sure?'} , class: "btn btn-danger m-2" %></td>
				</tr>
			</table>
		</div>
	</div>
</div>
